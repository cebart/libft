# include "libft.h"

size_t	ft_strlcat(char *dest, const char *src, size_t size)
{
	size_t	lenl;
	
	lenl = size;	
	while (*dest != '\0')
	{
		dest++;
		lenl--;
	}
	while (*src != '\0')
	{
		*dest = *src;
		dest++;
		src++;
		lenl--;
	}
	if (lenl)
		*dest = '\0';
	return (size - lenl);
}
